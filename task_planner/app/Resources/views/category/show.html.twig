{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-9">
        <ol class="breadcrumb">
            <li><a href="{{ path('homepage') }}">Home</a></li>
            <li><a href="{{ path('category_index') }}">Category</a></li>
            <li class="active">Show</li>
        </ol>
    </div>
</div>
    <h1>Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" >
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {% block isgranted %}{% endblock %}
{% endblock %}
